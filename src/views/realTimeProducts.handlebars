<form id="productForm">
    <input type="text" name="title" placeholder="Nombre del producto" required>
    <input type="number" name="price" placeholder="Precio" step="0.01" required>
    <input type="number" name="stock" placeholder="Stock inicial" required>
    <textarea name="description" placeholder="DescripciÃ³n" required></textarea>
    <button type="submit"> â• Agregar Producto</button>
</form>

<div class="products-grid" id="productsList">
    {{#each products}}
        <div class="product-card">
            <img src="{{this.thumbnails}}" alt="{{this.title}}" class="product-image">
            <div class="product-info">
                <h3>{{this.title}}</h3>
                <p class="description">{{this.description}}</p>
                <div class="details">
                    <p class="price">${{this.price}}</p>
                    <p class="stock">ğŸ›’ {{this.stock}} unidades</p>
                </div>
                <button class="delete-btn" onclick="deleteProduct({{this.id}})">ğŸ—‘ï¸ Eliminar</button>
            </div>
        </div>
    {{/each}}
</div>

<script src="/socket.io/socket.io.js"></script>
<script>
    const socket = io();
    
    socket.on('update-products', (products) => {
        const container = document.getElementById('productsList');
        container.innerHTML = products.map(product => `
            <div class="product-card">
                <img src="${product.thumbnails}" alt="${product.title}" class="product-image">
                <div class="product-info">
                    <h3>${product.title}</h3>
                    <p class="description">${product.description}</p>
                    <div class="details">
                        <p class="price">$${product.price}</p>
                        <p class="stock">ğŸ›’ ${product.stock} unidades</p>
                    </div>
                    <button class="delete-btn" onclick="deleteProduct(${product.id})">
                    <i class="fas fa-trash"></i>ğŸ—‘ï¸ Eliminar</button>
                </div>
            </div>
        `).join('');
    });

    document.getElementById('productForm').addEventListener('submit', (e) => {
        e.preventDefault();
        const formData = new FormData(e.target);
        
        const newProduct = {
            title: formData.get('title'),
            price: parseFloat(formData.get('price')),
            stock: parseInt(formData.get('stock')),
            description: formData.get('description'),
            code: `CODE-${Date.now()}`,
            category: "general"
        };

        socket.emit('create-product', newProduct);
        e.target.reset();
    });

    window.deleteProduct = (id) => {
        socket.emit('delete-product', id);
    };
</script>